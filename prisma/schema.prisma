generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Profesional {
  id           Int       @id @default(autoincrement())
  nombre       String
  apellido     String
  email        String    @unique
  password     String
  especialidad String?
  telefono     String?
  turnos       Turno[]
  consultas    Consulta[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @default(now()) @updatedAt
}

model Paciente {
  id              Int        @id @default(autoincrement())
  nombre          String
  apellido        String
  dni             String     @unique
  fechaNacimiento DateTime
  telefono        String?
  email           String?
  direccion       String?
  
  tieneAlergias        Boolean @default(false)
  tieneProbCardiacos   Boolean @default(false)
  tieneHipertension    Boolean @default(false)
  tieneDiabetes        Boolean @default(false)
  tomaMedicacion       Boolean @default(false)
  estaEmbarazada       Boolean @default(false)
  otrosAntecedentes    Boolean @default(false)
  observacionesAnamnesis String?

  turnos    Turno[]
  consultas Consulta[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @default(now()) @updatedAt
}

model Turno {
  id              Int          @id @default(autoincrement())
  fechaHoraInicio DateTime
  fechaHoraFin    DateTime
  motivo          String?
  estado          EstadoTurno  @default(PENDIENTE)
  
  pacienteId     Int
  paciente       Paciente     @relation(fields: [pacienteId], references: [id])
  profesionalId  Int
  profesional    Profesional  @relation(fields: [profesionalId], references: [id])
  consulta       Consulta?

  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @default(now()) @updatedAt
}

enum EstadoTurno {
  PENDIENTE
  CONFIRMADO
  CANCELADO_PACIENTE
  CANCELADO_PROFESIONAL
  ATENDIDO
  AUSENTE
}

model Consulta {
  id             Int         @id @default(autoincrement())
  fecha          DateTime    @default(now())
  diagnostico    String
  tratamiento    String
  notas          String?
  odontogramaData Json?
  costo          Decimal?    @db.Decimal(10, 2)
  
  pacienteId     Int
  paciente       Paciente    @relation(fields: [pacienteId], references: [id])
  profesionalId  Int
  profesional    Profesional @relation(fields: [profesionalId], references: [id])
  turnoId        Int?        @unique
  turno          Turno?      @relation(fields: [turnoId], references: [id])

  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @default(now()) @updatedAt
}
